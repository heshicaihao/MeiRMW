<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3F7"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF" >

        <ImageButton
            android:id="@+id/setting_return_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="14dp"
            android:src="@drawable/return_btn" />

        <TextView
            style="@style/TitleItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl01"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_notification_setting" />

        <TextView
            android:id="@+id/tv01"
            style="@style/SettingItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv01"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv01"
            android:paddingLeft="12dp"
            android:text="提醒设置" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl02"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/iv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_image_load_mode" />

        <TextView
            android:id="@+id/tv02"
            style="@style/SettingItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv02"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv02"
            android:paddingLeft="12dp"
            android:text="图片加载" />

        <ImageView
            android:id="@+id/iv022"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/triangle_right" />

        <TextView
            android:id="@+id/tv022"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv022"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/iv022"
            android:paddingRight="5dp"
            android:text="仅wifi"
            android:textColor="#007FFF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl03"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/iv03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_offline_download_night" />

        <TextView
            android:id="@+id/tv03"
            style="@style/SettingItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv03"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv03"
            android:paddingLeft="12dp"
            android:text="离线下载" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl04"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/iv04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_article_text_size" />

        <TextView
            android:id="@+id/tv04"
            style="@style/SettingItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv04"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv04"
            android:paddingLeft="12dp"
            android:text="文章字体大小" />

        <ImageView
            android:id="@+id/iv044"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/triangle_right" />

        <TextView
            android:id="@+id/tv044"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv044"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/iv044"
            android:paddingRight="5dp"
            android:text="num"
            android:textColor="#007FFF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl05"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/iv05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_clear_cache" />

        <TextView
            android:id="@+id/tv05"
            style="@style/SettingItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv05"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv05"
            android:paddingLeft="12dp"
            android:text="清理缓存" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl06"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/iv06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_about_us" />

        <TextView
            android:id="@+id/tv06"
            style="@style/SettingItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv06"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv06"
            android:paddingLeft="12dp"
            android:text="关于我们" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl07"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/iv07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_feedback" />

        <TextView
            android:id="@+id/tv07"
            style="@style/SettingItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv07"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv07"
            android:paddingLeft="12dp"
            android:text="意见反馈" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl08"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/iv08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="10dp"
            android:src="@drawable/ic_account" />

        <TextView
            android:id="@+id/tv08"
            style="@style/SettingItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv08"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/iv08"
            android:paddingLeft="12dp"
            android:text="登陆或注册" />
    </RelativeLayout>

</LinearLayout>